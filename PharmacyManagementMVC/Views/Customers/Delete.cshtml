@model PharmacyManagementMVC.Models.ViewModel.CustomerVM
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Delete", "Customers", FormMethod.Post, new {enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.CustomerId)
    <h4 class="display-4 text-danger text-center fw-bold">Are you sure,you want to Delete?</h4>

    <div class="row">
         <div class="col-6">
            <dl class="dl-horizontal">
                <dt>@Html.LabelFor(x => x.CustomerName, htmlAttributes: new { @class = "col-form-label" })</dt>
                <dd>@Html.DisplayFor(x => x.CustomerName)</dd>
                <dt>@Html.LabelFor(x => x.Age, htmlAttributes: new { @class = "col-form-label" })</dt>
                <dd>@Html.DisplayFor(x => x.Age)</dd>
                <dt>@Html.LabelFor(x => x.PurchaseDate, htmlAttributes: new { @class = "col-form-label" })</dt>
                <dd>@Html.DisplayFor(x => x.PurchaseDate)</dd>
                <dt>@Html.LabelFor(x => x.VisitedBefore, htmlAttributes: new { @class = "col-form-label" })</dt>
                <dd>@Html.DisplayFor(x => x.VisitedBefore)</dd>
                <dt>@Html.LabelFor(x => x.Picture)</dt>
                <dd>@*<img src="@Url.Content(Model.Picture)" width="62" height="62"/>*@</dd>

            </dl>
        </div>

        <div class="col-6">
            <h4 class="bg-dark-subtle text-center mt-2">Selected Medicines</h4>
            <div id="medContainer">
                @foreach(var item in Model.MedicineList)
                {
                    @Html.Action("AddMedicine", "Customers", new {id=item})
                }
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center form-control">
        <input type="submit" value="Delete" class="btn btn-danger">
        @Html.ActionLink("Back To List", "Index", "Customers", new {@class="btn btn-info btn-sm"})
    </div>
}

