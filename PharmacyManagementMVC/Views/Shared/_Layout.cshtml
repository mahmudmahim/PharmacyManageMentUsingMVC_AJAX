<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @*<script src="~/Scripts/jquery-3.7.1.js"></script>*@
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <style>
        body {
            font-family: 'Century Gothic';
            font-size: .90em;
        }
    </style>
    @RenderSection("head", required: false)
    @RenderSection("styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-light">
        <div class="container-fluid">
            <a href="#" class="navbar-brand fw-bold fs-4">Pharmacy Management</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Customers", "Index", "Customers", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Medicines", "Index", "Medicines", new { }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer>
        <p class="text-center">&copy;@DateTime.Now.Year--All Rights Reserved To This Owner</p>
    </footer>

    <script src="~/Scripts/bootstrap.js"></script>
    @*<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>*@
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $("#btnPlus").click(function (e) {
            e.preventDefault();

            var medContainer = $("#medContainer");
            $.ajax({

                url: "/Customers/AddMedicine",
                type: "GET",
                success: function (data) {
                    medContainer.append(data)
                }
            })
        })

        $(document).on("click", "#btnDeleteMdcn", function (e) {
            e.preventDefault();
            $(this).parent().parent().remove();
        })


    </script>

</body>
</html>
